<fieldset>
  <%= form_for @receiver do |f| %>
    <%= f.label :code %>
    <%= f.text_field :code, :size => 10, :length => 10 %>

    <%= f.label :irs %>
    <%= f.text_field :irs %>

    <%= f.label :rfc %>
    <%= f.text_field :rfc %>

    <%= f.label :curp %>
    <%= f.text_field :curp %>

    <%= f.label :surname %>
    <%= f.text_field :surname %>

    <%= f.label :mothers_maiden_name %>
    <%= f.text_field :mothers_maiden_name %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :street %>
    <%= f.text_field :street %>

    <%= f.label :ext_number %>
    <%= f.text_field :ext_number %>

    <%= f.label :int_number %>
    <%= f.text_field :int_number %>

    <%= f.label :suburb %>
    <%= f.text_field :suburb %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.label :reference %>
    <%= f.text_field :reference %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>

    <%= f.submit %>
  <% end %>
</fieldset>